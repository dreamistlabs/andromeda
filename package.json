{
  "name": "andromeda",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.0.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "react-scripts": "1.0.11"
  },
  "scripts": {
    "watch-andromeda": "npm run build-css && node-sass-chokidar src/scss/ -o public/assets/stylesheets/ --watch --recursive",
    "build-css": "node-sass-chokidar src/scss/ -o public/assets/stylesheets/",
    "watch-css": "node-sass-chokidar src/components/ -o src/components/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-andromeda watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
